<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <FrameLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_gigs_images"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <dreamguys.in.co.gigs.utils.CustomTextView
                android:id="@+id/tv_gigs_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/colorAppTheme"
                android:padding="@dimen/_5sdp"
                android:text="$1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp"
                app:fontName="@string/font_bold" />

            <ImageView
                android:id="@+id/iv_fav_gigs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/_5sdp" />

        </FrameLayout>

        <dreamguys.in.co.gigs.utils.CustomTextView
            android:id="@+id/tv_gigs_title"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:singleLine="true"
            android:text="asdasd"
            android:textSize="@dimen/_12sdp"
            app:fontName="@string/font_bold" />

        <dreamguys.in.co.gigs.utils.CustomTextView
            android:id="@+id/author"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:gravity="center"
            android:singleLine="true"
            android:text="asdas"
            android:textSize="@dimen/_10sdp"
            app:fontName="@string/font_regular" />

        <RatingBar
            android:id="@+id/rating_gigs"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:rating="2.5" />

        <dreamguys.in.co.gigs.utils.CustomTextView
            android:id="@+id/rating_count"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:singleLine="true"
            android:text="(20)"
            android:textSize="@dimen/_10sdp"
            app:fontName="@string/font_regular" />

        <RelativeLayout
            android:id="@+id/rl_location"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_location_on_grey_24dp" />

            <dreamguys.in.co.gigs.utils.CustomTextView
                android:id="@+id/tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/_8sdp"
                app:fontName="@string/font_regular" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

